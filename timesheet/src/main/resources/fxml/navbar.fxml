<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="cz.yirikus.controller.NavbarController">

    <left>
        <Button text="Timesheet" onAction="#handleTimesheetButton" fx:id="timesheetButton"/>
    </left>

    <center>
        <HBox>
            <Button text="&lt;=" onAction="#handlePrevButton" fx:id="periodPrevButton"/>
            <Button text="=&gt;" onAction="#handleNextButton" fx:id="periodNextButton"/>
        </HBox>
    </center>

    <right>
        <HBox>
            <Button text="Tasks"  onAction="#handleTasksButton" fx:id="tasksButton"/>
            <Button text="Charts" onAction="#handleChartsButton" fx:id="chartsButton"/>
            <Button text="Export" onAction="#handleExportButton" fx:id="exportButton"/>
        </HBox>
    </right>

</BorderPane>


